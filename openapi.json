{
  "openapi": "3.0.3",
  "info": { "title": "Banca Dati Giurisprudenza", "version": "1.0.1" },
  "servers": [{ "url": "https://apps.dirittopratico.it" }],
  "paths": {
    "/sentenze.html": {
      "get": {
        "operationId": "ricercaSentenze",
        "summary": "Ricerca sentenze nella banca dati",
        "parameters": [
          { "in": "query", "name": "q", "required": true, "schema": { "type": "string" } },
          { "in": "query", "name": "exp", "required": true, "schema": { "type": "string", "enum": ["json"] } }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Sentenza" } }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Sentenza": {
        "type": "object",
        "properties": {
          "AG": { "type": "string" },
          "foro": { "type": "string" },
          "numero": { "type": "string" },
          "data": { "type": "string" },
          "contenuto": { "type": "string" },
          "firmatoDa": { "type": "string" },
          "RG": { "type": "string" },
          "md5": { "type": "string" },
          "link": { "type": "string" }
        }
      }
    }
  }
}
